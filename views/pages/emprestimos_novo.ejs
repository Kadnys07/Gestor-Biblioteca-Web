<div class="max-w-3xl mx-auto bg-white p-8 rounded-xl shadow-lg mt-10">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Novo Empréstimo</h2>

  <% if (typeof erro !== 'undefined' && erro) { %>
    <div class="mb-4 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md" role="alert">
      <p class="font-bold">Erro de Validação</p>
      <p><%= erro %></p>
    </div>
  <% } %>

  <form action="/emprestimos/novo" method="POST" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label for="livroId" class="block text-sm font-medium text-gray-700">Livro Disponível</label>
        <select id="livroId" name="livroId" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
          <option value="">Selecione um livro</option>
          <% livros.forEach(livro => { %>
            <option value="<%= livro.id %>" <%= (typeof valores !== 'undefined' && valores.livroId == livro.id) ? 'selected' : '' %>>
              <%= livro.titulo %> (Disp: <%= livro.disponivel %>)
            </option>
          <% }) %>
        </select>
      </div>
      <div>
        <label for="leitor-select-search" class="block text-sm font-medium text-gray-700">Buscar Leitor por Nome ou CPF</label>
        <!-- Trocado input por select para garantir a seleção única e correta semântica. -->
        <select id="leitor-select-search" name="leitorId" required placeholder="Digite para buscar..." autocomplete="off">
          <option value="">Selecione um leitor</option>
        </select>
      </div>
      <div class="md:col-span-2">
        <label for="devolucao" class="block text-sm font-medium text-gray-700">Data de Devolução</label>
        <input type="date" id="devolucao" name="devolucao" value="<%= typeof valores !== 'undefined' ? valores.devolucao : '' %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md">
      </div>
    </div>
    <div class="flex justify-end gap-2 pt-4">
      <a href="/emprestimos" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300">Cancelar</a>
      <button type="submit" class="px-4 py-2 bg-yellow-700 text-white rounded-md hover:bg-yellow-800">Salvar</button>
    </div>
  </form>
</div>

<script>
  // Variavel global para o main.js
  window.listaDeLeitores = <%- JSON.stringify(leitores.map(leitor => ({
    value: leitor.id,
    text: `${leitor.nome} (CPF: ${leitor.cpf})`
  }))) %>;
</script>


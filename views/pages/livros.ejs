<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Acervo de Livros</h1>
    <a href="/livros/novo" class="flex items-center px-4 py-2 font-semibold text-white bg-green-700 rounded-md hover:bg-green-800 transition-colors">
        <i class="ph-bold ph-plus mr-2"></i> Adicionar Livro
    </a>
</div>
<div class="mb-6 flex space-x-4">
  <input type="search" id="livro-search" placeholder="Pesquisar por título ou autor..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-green-500 transition">
  <select id="livro-status-filter" class="px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500 focus:border-green-500 transition">
    <option value="todos">Todos</option>
    <option value="disponivel">Disponíveis</option>
    <option value="indisponivel">Indisponíveis</option>
  </select>
</div>

<!-- Container da Tabela com overflow para responsividade -->
<div class="bg-white rounded-lg shadow-md overflow-x-auto">
  <table class="w-full min-w-[640px]" id="tabela-livros">
    
    <!-- Cabeçalho com estilo profissional -->
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Título</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Autor</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Gênero</th>
        <th class="px-6 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider">Disponível</th>
        <th class="px-6 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider">Ações</th>
      </tr>
    </thead>
    
    <!-- Corpo da tabela com melhor espaçamento e alinhamento -->
    <tbody class="divide-y divide-gray-200">
      <% livros.forEach(livro => { %>
        <tr class="hover:bg-gray-50 transition-colors"
            data-status="<%= livro.disponivel > 0 ? 'disponivel' : 'indisponivel' %>"
            data-search="<%= livro.titulo %> <%= livro.autor %> <%= livro.genero %>">
          <td class="px-6 py-4 align-middle text-sm text-gray-800"><%= livro.titulo %></td>
          <td class="px-6 py-4 align-middle text-sm text-gray-600"><%= livro.autor %></td>
          <td class="px-6 py-4 align-middle text-sm text-gray-600"><%= livro.genero %></td>
          <td class="px-6 py-4 align-middle text-sm text-gray-600 text-center"><%= livro.disponivel %></td>
          <td class="px-6 py-4 align-middle text-center">
            <div class="flex justify-center items-center">
              <i class="ph ph-pencil-simple cursor-pointer text-blue-600 hover:text-blue-800 text-lg"
                 title="Editar Livro"
                 onclick="abrirModalLivro(<%= JSON.stringify(livro) %>, <%= livros.indexOf(livro) %>)"></i>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include("../modals/edit_livro") %>

